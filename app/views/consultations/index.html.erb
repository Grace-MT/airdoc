
<h3 class="appointment-list" style="font-family: var(--bs-body-font-family); font-weight: normal;"> Available Consultations</h3>

<div class="container">

<div class="cards">
  <% @consultations.each do |consultation|%>
    <% name = "#{consultation.user.first_name.capitalize} #{consultation.user.last_name.capitalize}"%>
    <%=link_to consultation_path(consultation), class: "text-decoration-none" do %>
      <div class="card-product position-relative" >
        <%# <img src="https://images.unsplash.com/photo-1584820927498-cfe5211fd8bf?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" /> %>
        <%= image_tag 'doctor_prpfile_pic.png' %>
        <div class="card-product-infos">
          <h2 style="color: black; font-size: 24px">Dr. <%=name%></h2>
          <p>Bio: <%= consultation.pretty_title %></p>
          <p>Speciality: <%= consultation.speciality %></p>
          <p>Experience: <%= consultation.years_of_experience %> Years</p>
          <p>location: <%= consultation.location_city %></p>
          <span style="position: absolute; bottom: 16px; right: 16px; font-weight: bold; color: #4190B7;">Â£<%= consultation.price_per_hour %>/hour</span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

</div>


<div data-controller="toggle">

    <button data-action="click->toggle#fire" class="btn btn-success mx-5 mt-5"> Create consultation </button>


    <div class=" form-open" data-toggle-target="appForm">
      <%= render "form" %>
    </div>
</div>
